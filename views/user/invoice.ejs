<!DOCTYPE html>
<html lang="en">

<head>
    
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>mythrift</title>
   <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/urban/mainIconShoes.png">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
   <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>

</head>

<body>

   <div class="container">

      <div class="row gutters">

         <div class="row gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
               <div class="custom-actions-btns mb-5">
                  <!-- Add an id to the download button -->
                  <a href="#" id="downloadBtn" onclick="downloadPDF()" class="btn btn-success  ">
                     <i class="icon-download"></i> Download
                  </a>
                  
               </div>
            </div>
         </div>

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

               <div class="card">

                  <div class="card-body p-0">

                     <div class="invoice-container" id="myBillingArea">

                        <div class="invoice-header">

                           <!-- Row start -->
                           
                           <!-- Row end -->
                           <!-- Row start -->

                           <div class="row gutters">

                              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">

                                 <img src="assets/images/mythrift/theblackDemo-3.jpg" style="width: 75px;" alt="">
                                 <P style="font-weight: bold;">MYTHRIFT</P>
                                
                              </div>

                              <div class="col-lg-6 col-md-6 col-sm-6 ">
                                

                                 <% ordData.forEach((e,i) => { %>

                                    <u style="font-weight: bold;">Address</u>
                                 
                                   <address class="text-dark">
                                      <%= e.deliveryAddress.name %>, <%= e.deliveryAddress.place %>.<br>
                                      <%= e.deliveryAddress.city %>, <%= e.deliveryAddress.state %>, India.<br>
                                      Pincode : <%= e.deliveryAddress.pincode %><br>
                                      Phone : <%= e.deliveryAddress.phone %>
                                    </address>
                               
                              </div>

                           </div>

                           <!-- Row end -->
                           <!-- Row start -->

                           <div class="row gutters">

                              <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">

                                 <div class="invoice-details">

                                    <address class="text-dark ">
                                       <%= e.deliveryAddress.name %><br>
                                       <%= e.deliveryAddress.city %>, <%= e.deliveryAddress.state %>, Ind
                                    </address>

                                 </div>

                              </div>

                              <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">

                                 <div class="invoice-details">
                                    <div class="invoice-num">
                                       <div>Invoice - #00<%= i + 1 %></div>
                                       <div></div>
                                    </div>
                                 </div>		

                              </div>

                           </div>
                           <!-- Row end -->

                        </div>

                        <div class="invoice-body">

                           <!-- Row start -->

                           <div class="row gutters">
                              <div class="col-lg-12 col-md-12 col-sm-12">
                                 <div class="table-responsive">

                                    <table class="table custom-table m-0">

                                       <thead class="text-center ">

                                          <tr>
                                             <th>No</th>
                                             <th>Items</th>
                                             <th>price</th>
                                             <th>Quantity</th>
                                             <th>Total</th>
                                          </tr>

                                       </thead>

                                       <% ordData[0].products.forEach((e,n) => { %>

                                       <tbody class="text-center ">

                                          <tr>

                                            <td><%= n+1 %></td>

                                             <td class="d-flex gap-4 p-3">
                                               
                                                <div class="cir bg-white " style="  display: inline-block; width: 30px; height: 30px;  border-radius: 50%; overflow: hidden;">
                                                   <!-- <img style="width: 100%; height: 100%; object-fit: cover; " src='/productImage/' alt=""> -->
                                                    <!--  -->
                                               </div>

                                               <p class="m-0 text-muted">
                                                   <%= e.productId.name %>
                                                </p>

                                             </td>

                                             <td>$<%= e.productId.price %></td>
                                             <td><%= e.quantity %></td>
                                             <td>$<%= e.productId.price * e.quantity %></td>

                                          </tr>
                                       
                                    <% }) %>

                                          <tr class="text-end ">

                                             <td>&nbsp;</td>
                                             <td></td>

                                             <td colspan="2">

                                                <p>
                                                  <span class="text-warning "> Subtotal</span> <br>
                                                  <span class="text-success  ">Discount</span> <br>
                                                   
                                                </p>
                                                <h5 class="text-primary ">Grand Total</h5>
                                             </td>	

                                             <td>
                                                <p>
                                                   $<%= e.orderAmount + e.coupenDis %><br>
                                                  -$<%= e.coupenDis %><br>
                                                 
                                                </p>
                                                <h5 class="text-success">$<%= e.orderAmount %></h5>
                                             </td>

                                          </tr>

                                       </tbody>
                                       
                                       <% }) %>

                                    </table>

                                 </div>

                              </div>

                           </div>

                           <!-- Row end -->

                        </div>

                        <div class="invoice-footer">
                           Happy Shopping,Visit Again
                        </div>

                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>

</body>

<style>
   body{margin-top:20px;
    color: #2e323c;
    background: #f5f6fa;
    position: relative;
    height: 100%;
}
