                        <input type="date" onchange="customDate(this)" name="endD" id="endDate">

                    <% } %>

                </div>
            </header>

            <!-- card-header end// -->

            <div class="card-body" >

                <div class="table-responsive">

                    <div id="reloadDiv" class="w-100 container-fluid" id="example">

                        <table class="table table-dark "  id="example" >

                            <thead class="text-center">
                                <tr>
                                    <th scope="col">NO</th>
                                    <th scope="col">Order Id</th>
                                    <th scope="col">Billing Name</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Payment</th>
                                </tr>
                            </thead>

                            <tbody id="table" class="text-center">

                                    <% if(locals.overallReport){ %>

                                    <% overallReport.forEach(( element , i)=>{ %>

                                        <tr>

                                            <td scope="col">
                                                <%= i + 1 %>
                                            </td>
                                            
                                            <td scope="col">
                                                <%= element._id %>
                                            </td>

                                            <td scope="col">
                                                <%= element.deliveryAddress.name %>
                                            </td>

                                            <td scope="col">
                                                <%= element.orderDate.toString().split(' ').slice(0,4).join(' ') %>
                                            </td>

                                            <td scope="col">
                                                <%= element.orderAmount %>
                                            </td>

                                            <td scope="col">
                                                <%= element.payment %>
                                            </td>
                                            
                                        </tr>

                                    <% })} %>
                            </tbody>

                        </table>

                    </div>

                </div>

            </div>

            <!-- card-body -->

        </div>

        <!-- card end  -->

    </section>

   

